{
    "compilerOptions":  {
        "target": "es5",
        "moduleResolution": "node",
        "baseUrl": "source",        
        "outDir": "../distribution-bot/",
        "sourceMap": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types/"
        ],
        "lib": [
            "es2016"
        ]
    },
    "include": [
        "./source/**/*",
    ],
    "exclude": [
        "node_modules",
        "distribution",
        "typings"
    ]
}